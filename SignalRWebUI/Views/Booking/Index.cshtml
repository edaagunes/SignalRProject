@model List<ResultBookingDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Rezervasyon İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Rezervasyon Listesi</div>
					</div>
					<div class="card-body">

						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ad Soyad</th>
									<th scope="col">Telefon</th>
									<th scope="col">Kişi Sayısı</th>
									<th scope="col">Durum</th>
									<th scope="col">Düzenle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Name</td>
										<td>@item.Phone</td>
										<td>@item.PersonCount</td>
										<td>Rezervasyon Alındı</td>
										<td>
											<a href="/Booking/DeleteBooking/@item.BookingId" class="btn btn-danger">Sil</a>
											<a href="/Booking/UpdateBooking/@item.BookingId" class="btn btn-warning">Güncelle</a>
										</td>
									</tr>
								}

							</tbody>
						</table>
						<a href="/Booking/CreateBooking" class="btn btn-primary">Yeni Hakkımızda</a>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>



