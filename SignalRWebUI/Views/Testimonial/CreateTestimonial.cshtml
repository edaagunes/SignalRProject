@model CreateTestimonialDto
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Referans İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Referans Yorumu</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="name">Referans Adı</label>
								<input type="text" rows="3" class="form-control" asp-for="Name" id="name"></>
							</div>
							<div class="form-group">
								<label for="Title">Unvan</label>
								<input type="text" class="form-control" asp-for="Title" id="Title">
							</div>
							
							<div class="form-group">
								<label for="imageUrl">Görsel</label>
								<input type="text" rows="3" class="form-control" asp-for="ImageUrl" id="imageUrl"></>
							</div>
							<div class="form-group">
								<label for="comment">Yorum</label>
								<textarea type="text" rows="3" class="form-control" asp-for="Comment" id="comment"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button type="submit" class="btn btn-success">Yorumu Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

