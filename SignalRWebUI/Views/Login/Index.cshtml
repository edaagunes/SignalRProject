@model LoginDto
@{
    Layout = null;
}
<style>
	.page-content {
		background: linear-gradient(45deg, #b8e0d2, #fcd5ce) !important;
	}

	.form-v6-content .form-detail .register{
		background: #ff9d3c !important;
	}
</style>

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Form-v6 by Colorlib</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="~/colorlib-regform-32/css/style.css" />
</head>
<body class="form-v6">
	<div class="page-content">
		<div class="form-v6-content">
			<div class="form-left">
				<img src="~/colorlib-regform-32/images/13846.jpg" style="width:484px; height:584px;" alt="form">
			</div>
			<form class="form-detail" method="post">
				<h2>Kullanıcı Girişi</h2>
				<div class="form-row">
					<input type="text" id="full-name" asp-for="Username" class="input-text" placeholder="Kullanıcı Adınız">
				</div>
				<div class="form-row">
					<input type="password" id="password" asp-for="Password" class="input-text" placeholder="Şifreniz" required>
				</div>
				<div class="form-row-last">
					<input type="submit" name="register" class="register" value="Giriş Yap">
				</div>
			</form>
		</div>
	</div>
</body>
</html>
