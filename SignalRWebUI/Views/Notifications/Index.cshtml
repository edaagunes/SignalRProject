@model List<ResultNotificationDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Bildirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Bildirim Listesi</div>
					</div>
					<div class="card-body">

						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Tarih</th>
									<th scope="col">Durum</th>
									<th scope="col">Düzenle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.NotificationId</td>
										<td>@item.Description</td>
										<td>@item.Date.ToString("dd-MMM hh:mm tt")</td>

										@if (item.Status == false)
										{
											<td>
												<a href="/Notifications/NotificationStatusChangeToTrue/@item.NotificationId" class="btn btn-outline-success" style="width:120px;height:40px;">
													Okundu
												</a>
											</td>
										}
										else
										{
											<td>
												<a href="/Notifications/NotificationStatusChangeToFalse/@item.NotificationId" class="btn btn-outline-secondary" style="width:120px;height:40px;">
													<i class="la la-envelope"></i> Okunmadı
												</a>
											</td>
										}

										<td>
											<a href="/Notifications/DeleteNotification/@item.NotificationId" class="btn btn-danger">Sil</a>
											<a href="/Notifications/UpdateNotification/@item.NotificationId" class="btn btn-warning">Güncelle</a>
										</td>
									</tr>
								}

							</tbody>
						</table>
						<a href="/Notifications/CreateNotification" class="btn btn-primary">Yeni Bildirim</a>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>

