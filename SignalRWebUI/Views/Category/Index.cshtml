@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Kategori Listesi</div>
					</div>
					<div class="card-body">
						
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Kategori Adı</th>
									<th scope="col">Durum</th>
									<th scope="col">Düzenle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.CategoryId</td>
										<td>@item.CategoryName</td>
										<td>@item.CategoryStatus</td>
										<td>
											<a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a>
											<a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-warning">Güncelle</a>											
										</td>
									</tr>
								}
								
							</tbody>
						</table>
						<a href="/Category/CreateCategory" class="btn btn-primary">Yeni Kategori</a>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>

