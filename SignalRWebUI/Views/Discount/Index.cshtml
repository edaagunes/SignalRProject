@model List<ResultDiscountDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Günün İndirimleri İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İndirimler Listesi</div>
					</div>
					<div class="card-body">

						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ürün</th>
									<th scope="col">İndirim Oranı</th>
									<th scope="col">Durum</th>
									<th scope="col">Düzenle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.DiscountId</td>
										<td>@item.Title</td>
										<td>@item.Amount</td>
										<td>
											<span class="badge @(item.Status ? "badge-success" : "badge-danger")">
												@(item.Status ? "Aktif" : "Pasif")
											</span>
										</td>

										<td>
											@if (item.Status == true)
											{
												<a href="/Discount/ChangeStatusToFalse/@item.DiscountId" class="btn btn-dark">Pasif Yap</a>
											}
											else
											{
												<a href="/Discount/ChangeStatusToTrue/@item.DiscountId" class="btn btn-success">Aktif Yap</a>
											}

											<a href="/Discount/DeleteDiscount/@item.DiscountId" class="btn btn-danger">Sil</a>
											<a href="/Discount/UpdateDiscount/@item.DiscountId" class="btn btn-warning">Güncelle</a>
										</td>
									</tr>
								}

							</tbody>
						</table>
						<a href="/Discount/CreateDiscount" class="btn btn-primary">Yeni İndirimli Ürün</a>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>



