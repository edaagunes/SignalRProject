@model UpdateSocialMediaDto
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Sosyal Medya</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="SocialMediaId"/>
							<div class="form-group">
								<label for="Title">Başlık</label>
								<input type="text" class="form-control" asp-for="Title" id="Title">
							</div>
							<div class="form-group">
								<label for="url">Url</label>
								<input type="text" rows="3" class="form-control" asp-for="Url" id="url"></>
							</div>
							<div class="form-group">
								<label for="icon">İkon</label>
								<input type="text" rows="3" class="form-control" asp-for="Icon" id="icon"></>
							</div>
						</div>
						<div class="card-action">
							<button type="submit" class="btn btn-success">Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
